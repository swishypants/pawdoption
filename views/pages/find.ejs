<!DOCTYPE html>
<html>
<head>
	<% include ../partials/nav.ejs %>
	
	<div class="jumbotron text-center">
		<div class="container">
			<a href="/" class="logo">
				<img src="/logo.png" height="200px" width="200px"/>
			</a>
			<h1>Find your dog match!</h1>
		</div>
	</div>
	
</head>

<body>
	<section id="find">
		<div class="container">
			
			<table class="table">
				
			<tbody>
				<tr>
					<th>
						<a href="/find/sort-id">Dog ID</a>
					</th>
					<th>
						<a href="/find/sort-name">Name</a>
					</th>
					<th>
						<a href="/find/sort-age">Age
					</th>
					<th>
						<a href="/find/sort-gender">Gender
					</th>
					<th>
						<a href="/find/sort-breed">Breed
					</th>
					<th>
						<a href="/find/sort-size">Size
					</th>
					<th>
						<a href="/find/sort-coat">Coat
					</th>
					<th>
						<a href="/find/sort-personality">Temperament
					</th>
					<th>
						<a href="/find/sort-energy">Energy Level
					</th>
					<th>
						<a href="/find/sort-shelter">Shelter
					</th>
				</tr>
				<% r.forEach(function(r) { %>
				<tr>
					<td><%= r.dog_id%></td>
					<td><%= r.name%></td>
					<td><%= r.age%></td>
					<td><%= r.gender%></td>
					<td><%= r.breed%></td>
					<td><%= r.size%></td>
					<td><%= r.coat%></td>
					<td><%= r.personality%></td>
					<td><%= r.energy_level%></td>
					<td><a href="/shelter_dogs/<%= r.shelter_id%>"><%= r.shelter_id%></a></td>
				</tr>
				<% }); %>
			</table>
			
		</div>
		
		
	</section>
</body>
<% include ../partials/footer.ejs %>
</html>